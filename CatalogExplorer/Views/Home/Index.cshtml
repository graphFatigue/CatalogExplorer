</form>

<form asp-action="ImportFromDirectory" method="post">
    <label>Import from Directory:</label>
    <input type="text" name="directoryPath" required />
    <button type="submit">Import</button>
</form>

<form asp-action="ImportFromFile" method="post" enctype="multipart/form-data">
    <label>Import from File:</label>
    <input type="file" name="file" required />
